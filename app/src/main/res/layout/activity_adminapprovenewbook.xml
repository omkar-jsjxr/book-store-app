<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminapprovenewbookActivity">
    <RelativeLayout
        android:id="@+id/approve_rel1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approve New Books"
            android:id="@+id/newapprovebbok"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#FAF7FB"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/approve_rel1"
        android:id="@+id/adminapproverecy"

        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>