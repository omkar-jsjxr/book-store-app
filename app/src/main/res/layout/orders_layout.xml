<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_margin="10dp"

        >
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/username_order"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FBF7FD"
            />

        <TextView
            android:id="@+id/phonenum_order"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Phone No."
            android:textAlignment="viewEnd"
            android:textColor="#FBF7FD"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/order_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textStyle="bold"
            android:layout_below="@+id/cart_bookquant"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FBF7FD"
            />
        <TextView
            android:id="@+id/order_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address City"
            android:textStyle="bold"
            android:layout_below="@+id/order_totalprice"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FBF7FD"
            />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textStyle="bold"
            android:layout_below="@+id/order_city"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FBF7FD"
            />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/order_date_time"
    android:layout_margin="20dp"
    android:id="@+id/shoeorderbtn"
    android:textColor="@color/colorPrimary"
    android:text="Show this order"
    android:textStyle="bold"
    android:textSize="15dp"
    android:background="#FDFCFD"

    />
    </RelativeLayout>

</RelativeLayout>