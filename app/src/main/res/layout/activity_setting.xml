<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enduser.SettingActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/appbarsetting"
            android:background="@color/colorPrimary"
            >


              <androidx.appcompat.widget.Toolbar
                      android:id="@+id/toolbarsetting"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                      <TextView
                          android:layout_width="wrap_content"
                          android:text="Close"
                          android:id="@+id/close_setting"
                          android:textStyle="bold"
                          android:textSize="20sp"
                          android:layout_alignParentStart="true"
                          android:textColor="#F3F1F4"
                          android:layout_height="wrap_content"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:text="Update"
                                 android:id="@+id/update_setting"
                                 android:layout_marginRight="10dp"
                                 android:textStyle="bold"
                                 android:textSize="20sp"
                                 android:layout_alignParentEnd="true"
                                 android:textColor="#F3F1F4"
                                 android:layout_height="wrap_content"/>

                     </RelativeLayout>
              </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_profileimage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/profile"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/appbarsetting"

            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Change Profile"
            android:id="@+id/profile_image_change"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/setting_profileimage"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/setting_phone"
            android:hint="Order Phone No."
            android:layout_below="@+id/profile_image_change"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/setting_name"
            android:hint="Full Name"
            android:padding="10dp"
            android:layout_below="@+id/setting_phone"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/setting_address"
            android:hint="Address"
            android:layout_below="@+id/setting_name"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/security_Q"
        android:text="Set Security questions"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#F3F2F4"
        android:layout_below="@+id/setting_address"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/buttons1"
        android:layout_height="wrap_content"/>

</RelativeLayout>