<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enduser.BookdetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:id="@+id/bookimage_detail"
        />
    <TextView
        android:id="@+id/bookname_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookimage_detail"
        android:text="Book Name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookname_detail"
        android:text="Book Description"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/bookdesc_details"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookdesc_details"
        android:text="Book Price"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:id="@+id/bookprice_detail"
        />
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:elevation="6dp"
            app:textSize="16dp"
            app:initialNumber="1"
            android:layout_centerHorizontal="true"
            app:finalNumber="10"
            android:gravity="center"
            android:layout_below="@+id/bookprice_detail"
            android:layout_marginTop="10dp"
            android:id="@+id/number_btn"
            >
        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/btn_cart"
    android:text="Add to Cart"
    android:textColor="#F7F5F8"
    android:background="@drawable/buttons1"
    android:layout_margin="25dp"
    />
</RelativeLayout>